<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudyTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:StudyTracker.Views"
    Title="StudyTracker">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:HomePage}"
            Icon="homeicon.png" />
        <ShellContent
            Title="Add Goal"
            ContentTemplate="{DataTemplate views:AddSessionPage}"
            Icon="add.png" />
        <ShellContent
            Title="History"
            ContentTemplate="{DataTemplate views:HistoryPage}"
            Icon="history.png" />
        <ShellContent
            Title="Goal"
            ContentTemplate="{DataTemplate views:GoalPage}"
            Icon="goal.png" />
    </TabBar>

</Shell>
