<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="StudyTracker.CustomControls.CustomProgressBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Frame
        Padding="0"
        BackgroundColor="LightGray"
        CornerRadius="10"
        HasShadow="False"
        HeightRequest="20"
        WidthRequest="300">

        <Grid x:Name="RootGrid" IsClippedToBounds="True">

            <BoxView
                x:Name="ProgressBox"
                BackgroundColor="Green"
                HorizontalOptions="Start"
                VerticalOptions="FillAndExpand"
                WidthRequest="0" />
        </Grid>
    </Frame>
</ContentView>
