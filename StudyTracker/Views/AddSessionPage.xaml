<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StudyTracker.Views.AddSessionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AddSessionPage">
    <VerticalStackLayout>

        <Label
            Margin="20,0,0,0"
            FontAttributes="Bold"
            FontSize="16"
            Text="Subject" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*" />
                <!--  90%  -->
                <ColumnDefinition Width="0.1*" />

                <!--  10% for spacing  -->
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="10,10,10,20"
                Padding="5"
                BackgroundColor="White"
                Opacity=".5"
                Stroke="Gray"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Entry
                    BackgroundColor="Transparent"
                    Opacity="0.20"
                    Placeholder="Enter text"
                    PlaceholderColor="Red"
                    TextColor="Black" />
            </Border>
        </Grid>

        <Label
            Margin="20,0,0,0"
            FontAttributes="Bold"
            FontSize="16"
            Text="Topic" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*" />
                <!--  90%  -->
                <ColumnDefinition Width="0.1*" />

                <!--  10% for spacing  -->
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="10,10,10,20"
                Padding="5"
                BackgroundColor="White"
                Stroke="Gray"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Entry
                    BackgroundColor="Transparent"
                    Placeholder="Enter text"
                    TextColor="Black" />
            </Border>
        </Grid>
        <Label Text="Start Time" />
        <Frame>
            <TimePicker />
        </Frame>
        <Label Text="End Time" />
        <Frame>
            <TimePicker />
        </Frame>
        <Label Text="Notes" />
        <Entry HeightRequest="1000" Placeholder="notes......" />
        <Button HeightRequest="50" Text="Save" />
    </VerticalStackLayout>
</ContentPage>