<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StudyTracker.Views.AddSessionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:entrycontrols="clr-namespace:StudyTracker.CustomControls"
    Title="AddSessionPage">

    <VerticalStackLayout>

        <Label
            Margin="20,20,10,10"
            FontAttributes="Bold"
            FontSize="16"
            Text="Subject" />
        <entrycontrols:CustomEnteryBorder
            Margin="20"
            FontAttributes="Bold"
            FontSize="16"
            HeightRequest="30"
            Placeholder="Subjects"
            WidthRequest="300" />

        <Label
            Margin="20,0,0,0"
            FontAttributes="Bold"
            FontSize="16"
            Text="Topic" />


        <Label Text="Start Time" />
        <Frame>
            <TimePicker />
        </Frame>
        <Label Text="End Time" />
        <Frame>
            <TimePicker />
        </Frame>
        <Label Text="Notes" />
        <Entry HeightRequest="1000" Placeholder="notes......" />
        <Button HeightRequest="50" Text="Save" />
    </VerticalStackLayout>
</ContentPage>